<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="sociofuracao"
		transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>jdbc/SOCIO</jta-data-source>
		<class>br.com.sociofuracao.model.Cidade</class>
		<class>br.com.sociofuracao.model.Clube</class>
		<class>br.com.sociofuracao.model.Estadio</class>
		<class>br.com.sociofuracao.model.Estado</class>
		<class>br.com.sociofuracao.model.Evento</class>
		<class>br.com.sociofuracao.model.Lugar</class>
		<class>br.com.sociofuracao.model.Pais</class>
		<class>br.com.sociofuracao.model.Setor</class>
		<class>br.com.sociofuracao.model.TipoUsuario</class>
		<class>br.com.sociofuracao.model.Transacao</class>
		<class>br.com.sociofuracao.model.Usuario</class>
		<properties>
			<!-- <property name="eclipselink.ddl-generation" value="create-tables"/> -->
		</properties>
	</persistence-unit>
</persistence>
